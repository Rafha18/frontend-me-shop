<form class= "formcad" {{action "save" on="submit"}}>
    <input class="form-control" type="text" placeholder="" readonly>
    <input class="form-control" type="text" placeholder="" readonly>
    
    <div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">CADASTRO DE CLIENTES ME-SHOP!</h1>
    <p class="lead">Faça agora seu cadastro em nosso site! Aproveite as maiores taxas de juros e participe de nossas fakes promoções!</p>
  </div>
</div>
    
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">E-MAIL:</label>
      {{input value=email placeholder="Email" type="text" class="form-control" }}
      <!--input type="email" name="email" value="email" class="form-control" id="inputEmail4" placeholder="Informe o E-mail de Cadastro"-->
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">SENHA:</label>
      <input type="password" name="password" class="form-control" id="inputPassword4" placeholder="Informe sua Senha">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">NOME COMPLETO:</label>
    <input type="text" class="form-control" name="fullName" id="nome" placeholder="Informe seu Nome Completo">
  </div>
  <div class="form-group">
    <label for="inputAddress2">ENDEREÇO:</label>
    <input type="text" class="form-control" id="endereco" name="address" placeholder="Informe Seu Endereço e Número Predial">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">CIDADE:</label>
      <input type="text" class="form-control" id="inputCity" placeholder="Informe Sua Cidade">
    </div>
    <div class="form-group col-md-4">
      <label for="inputEstado">ESTADO:</label>
      <select id="inputEstado" class="form-control">
        <option selected>Selecionar</option>
        <option>PR</option>
        <option>SC</option>
        <option>RS</option>
        <option>SP</option>
        <option>RJ</option>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="inputCEP">CEP:</label>
      <input type="text" class="form-control" id="cep" placeholder="Informe Seu CEP">
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        EU NEM LI OS TERMOS DO ME-SHOP MAS CONCORDO COM OS PREÇOS ABUSIVOS!
      </label>
    </div>
  </div>
  <button type="submit" id="cadastro" class="btn btn-primary">...QUERO ME CADASTRAR!...</button>
